			"name": "Register User - Positive",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Register should return 201\", () => {\r",
							"  pm.response.to.have.status(201);\r",
							"});\r",
							"pm.test(\"Response should contain user ID\", () => {\r",
							"  const json = pm.response.json();\r",
							"  pm.expect(json).to.have.property(\"id\");\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Generate a unique email each run\r",
							"const randomEmail = `user_${Date.now()}@example.com`;\r",
							"pm.environment.set(\"testEmail\", randomEmail);\r",
							"pm.environment.set(\"testPassword\", \"12345678\");"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"name\": \"QA Tester\",\r\n  \"email\": \"{{testEmail}}\",\r\n  \"password\": \"{{testPassword}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/auth/register",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"auth",
						"register"
					]
				}
			},
			"response": []
		},
		{
			"name": "Login Request - Positive",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Login should return 200\", function () {",
							"  pm.response.to.have.status(200);",
							"});",
							"",
							"const jsonData = pm.response.json();",
							"pm.test(\"Response has token\", function () {",
							"  pm.expect(jsonData).to.have.property(\"token\");",
							"});",
							"",
							"// Save the token for next requests",
							"pm.environment.set(\"authToken\", jsonData.token);"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
